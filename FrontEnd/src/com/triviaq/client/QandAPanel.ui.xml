<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
 xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
 xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:my="urn:import:com.triviaq.client">
 <ui:style>
 .title {
 	font-weight: bold;
 	font-size: 2em;
 }
 </ui:style>
 <g:HTMLPanel>
  <m:MaterialPanel addStyleNames="valign-wrapper">
   <m:MaterialColumn>
    <m:MaterialRow>
     <m:MaterialLabel addStyleNames="{style.title}"
      textAlign="CENTER">Mahabharata Triva Questions</m:MaterialLabel>
     <m:MaterialPanel ui:field="qnaWidgetHolder"></m:MaterialPanel>
    </m:MaterialRow>
    <m:MaterialRow >
     <m:MaterialColumn grid='6'>
      <m:MaterialButton ui:field="prevButton" text="Prev" waves="LIGHT"
       backgroundColor="blue" textColor="white" iconType="CHEVRON_LEFT"
       iconPosition="LEFT" />
     </m:MaterialColumn>
     <m:MaterialColumn grid='6' float="RIGHT">
      <m:MaterialButton  ui:field="nextButton" text="Next" waves="LIGHT"
       backgroundColor="blue" textColor="white" iconType="CHEVRON_RIGHT"
       iconPosition="RIGHT" />
     </m:MaterialColumn>
    </m:MaterialRow>
   </m:MaterialColumn>
  </m:MaterialPanel>
 </g:HTMLPanel>

</ui:UiBinder> 